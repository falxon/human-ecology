<!DOCTYPE html>
<html lang="en">

  <head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="{{metadata}}">
    <meta name="author" content="Jojen Willis">

    <title>{{title}}</title>

    <!-- Bootstrap core CSS -->
    <link href="/modules/bootstrap/css/bootstrap.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="/css/business-frontpage.css" rel="stylesheet">
    <link href="/css/custom.css" rel="stylesheet">

  </head>

  <body>

    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
      <div class="container">
        <a class="navbar-brand" href="/">{{site_name}}</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarResponsive">
          <ul class="navbar-nav ml-auto">
            {{#navbar}}
            <li class="nav-item {{active}}">
              <a class="nav-link" href="{{url}}">{{name}}
              {{#current}}<span class="sr-only">{{raisin}}</span>{{/current}}</a>
            </li>
            {{/navbar}}
          </ul>
        </div>
      </div>
    </nav>

    <!-- Page Content -->
    <div class="container">
{{#page_text}}
      <div class="row">
        <div class="col-sm-12">
          {{#main}}
          {{#title}}
          <h2 class="mt-4">{{words}}</h2>
          {{/title}}
          {{#title_small}}
          <h3 class="mt-4">{{words}}</h3>
          {{/title_small}}
          {{#paragraph}}
          <p>{{content}}</p>
          {{/paragraph}}
          {{#image}}
            <div class="row {{centering}}">
                {{#img}}
                <div class="col-sm-4">
                <img src="{{url}}" alt="{{alt_text}}" class="carrots img-fluid edge-padding">
                </div>
                {{/img}}
            </div>
          {{/image}}
          {{#image2}}
          <div class="row">
            <div class="col-sm-4">
              <img src="{{url}}" alt="{{alt_text}}" class="carrots img-fluid edge-padding">
            </div>
          </div>
          {{/image2}}
          {{#search}}
          <form action="/manage" method="post">
            <label for="search">Enter the identification number of the photo you wish to find:</label>
            <input type="text" name="search" id="search" required="true">
            <button type="submit" class="btn btn-primary">{{name}}</button>
          </form>
          {{/search}}
          {{#linklist}}
          <p>
            <ul>
              {{#link}}
              <li><a href="{{url}}">{{text}}</a></li>
              {{/link}}
            </ul>
          </p>
          {{/linklist}}
          {{/main}}
          {{#button}}
          <p>
            <a class="btn btn-primary btn-lg" href="/about">{{name}} &raquo;</a>
          </p>
          {{/button}}
        </div>
      </div>
  {{/page_text}}


<hr>
<div class="row">
  <div class="col-lg-8 edge-padding">
    <div class="card no-image extra-edge-padding">
      {{#post}}
        {{#post_title}}
        <h2>{{title}}</h2>
        {{/post_title}}
        <div class="blog-post">
          {{#post_content}}
          <p>{{{content}}}</p>
          {{/post_content}}
        </div>
        {{#button}}
        <a href="{{url}}" class="btn btn-primary">{{text}}</a>
        {{/button}}
        <hr/>
      {{/post}}
    </div>
  </div>
  <div class="col-lg-4 edge-padding">
    <div class="card links-white">
      <h5 class="card-header">Archive</h5>
      <p></p>
      {{#link}}
      <ul>
        {{#link_item}}
        <li><a href="{{url}}">{{name}}</a></li>
        {{/link_item}}
      </ul>
      {{/link}}
    </div>
  </div>
</div>
</div>
<hr>
    <!-- /.container -->

    <!-- Footer -->
    <footer class="py-{{footer_size}} bg-dark">
      <div class="container">
        <p class="m-0 text-center text-white">Copyright &copy; {{site_name}}</p>
        {{#credit}}
        <p class="m-0 text-center text-white links-white">Site developed by <a href="http://www.entropyinnovations.com">{{webdever}}</a></p>
        <p class="m-0 text-center text-white">Content by Jojen Willis</p>
        {{/credit}}
      </div>
    </footer>

    <!-- Bootstrap core JavaScript -->
    <script src="modules/jquery/jquery.js"></script>
    <script src="modules/bootstrap/js/bootstrap.bundle.js"></script>

  </body>

</html>
